  "title": "HTML maxlength attribute test",
  "description": "Tests a text input with a maxlength attribute",
  "html_file": "html/maxlength-attribute.html",
  "assertions": [
    {
      "feature_id": "html/maxlength_attribute",
      "feature_assertion_id": "convey_max_length_reached",
      "applied_to": "html/input(type-text)_element"
