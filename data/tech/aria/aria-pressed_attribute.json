{
  "$schema": "../../schema/feature.json",
  "id": "aria-pressed_attribute",
  "title": "aria-pressed attribute",
  "type": "attribute",
  "description": "Indicates the current \"pressed\" state of toggle buttons. See related aria-checked and aria-selected.",
  "references": [
    {
      "title": "ARIA spec for aria-pressed",
      "url": "https://www.w3.org/TR/wai-aria-1.1/#aria-pressed"
    }
  ],
  "assertions": [
    {
      "id": "convey_value_false",
      "title": "convey the \"false\" value",
      "examples":  [
        "A screen reader will announce something like \"<role> not pressed\""
      ],
      "strength": {
        "sr": "MUST",
        "vc": "NA"
      },
      "css_target": "*[aria-pressed=\"false\"]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    },
    {
      "id": "convey_value_true",
      "title": "convey the \"true\" value",
      "examples":  [
        "A screen reader will announce something like \"<role> pressed\""
      ],
      "strength": {
        "sr": "MUST",
        "vc": "NA"
      },
      "css_target": "*[aria-pressed=\"true\"]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    },
    {
      "id": "convey_value_mixed",
      "title": "convey the \"mixed\" value",
      "examples":  [
        "A screen reader will announce something like \"<role> partially pressed\""
      ],
      "strength": {
        "sr": "MUST",
        "vc": "NA"
      },
      "css_target": "*[aria-pressed=\"mixed\"]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    },
    {
      "id": "convey_value_undefined",
      "title": "convey the \"undefined\" value",
      "examples":  [
        "A screen reader will not announce the aria-pressed attribute at all when the value is undefined."
      ],
      "strength": {
        "sr": "MUST",
        "vc": "NA"
      },
      "css_target": "*[aria-pressed=\"undefined\"]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    },
    {
      "id": "convey_change_in_state",
      "css_target": "*[aria-pressed=\"undefined\"]"
    }
  ],
  "date_updated": "2019-11-11"
}
