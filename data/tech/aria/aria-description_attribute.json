{
  "$schema": "../../schema/feature.json",
  "id": "aria-description_attribute",
  "title": "aria-description attribute (future aria release)",
  "type": "attribute",
  "description": "Defines a string value that describes or annotates the current element.",
  "references": [
    {
      "title": "DRAFT ARIA spec for aria-description",
      "url": "https://w3c.github.io/aria/#aria-description"
    }
  ],
  "assertions": [
    {
      "id": "contribute_to_description",
      "title": "contribute to the description",
      "strength": {
        "sr": "MUST",
        "vc": "NA"
      },
      "css_target": "*[aria-description]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    },
    {
      "id": "convey_description_change",
      "title": "convey description changes when in focus",
      "strength": {
        "sr": "SHOULD",
        "vc": "NA"
      },
      "css_target": "*[aria-description]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    }
  ],
  "date_updated": "2021-10-19"
}
