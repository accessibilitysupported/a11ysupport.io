{
  "$schema": "../../schema/feature.json",
  "id": "aria-describedby_attribute",
  "title": "aria-describedby attribute",
  "type": "attribute",
  "description": "Identifies the element (or elements) that describes the object. See related aria-labelledby.",
  "references": [
    {
      "title": "ARIA spec for aria-describedby",
      "url": "https://www.w3.org/TR/wai-aria-1.1/#aria-describedby"
    }
  ],
  "assertions": [
    {
      "id": "contribute_to_description",
      "title": "contribute to the description",
      "strength": {
        "sr": "MUST",
        "vc": "NA"
      },
      "css_target": "*[aria-describedby]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    },
    {
      "id": "convey_description_change",
      "title": "convey description changes when in focus",
      "strength": {
        "sr": "SHOULD",
        "vc": "NA"
      },
      "css_target": "*[aria-description]",
      "operation_modes": [
        "sr/reading",
        "sr/interaction"
      ]
    }
  ],
  "date_updated": "2019-01-06"
}
